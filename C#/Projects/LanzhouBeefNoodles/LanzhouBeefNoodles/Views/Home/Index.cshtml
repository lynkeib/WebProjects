@model IEnumerable<LanzhouBeefNoodles.Models.Noodle>
@{
    ViewData["Title"] = "Index";
}

@foreach (var noodle in Model)
{
    <div>
        <h2>@noodle.Name</h2>
        <h3>$ @noodle.Price</h3>
        <p>@noodle.ShortDescription</p>
    </div>
}